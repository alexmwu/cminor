main: function integer () = {

  i: integer;

  for (i = 0; i < 5; i++) {
    print "i = ", i, '\n';
  }

  i = 0;
  for (; i < 5; i++) {
    print "i = ", i, '\n';
  }

  i = 0;
  for (; i < 5;) {
    print "i = ", i, '\n';
    i++;
  }

  i = 0;
  for (;;) {
    print "i = ", i, '\n';
    i++;
    if (i == 5) {
      return 0;
    }
  }

  return 0;
}
